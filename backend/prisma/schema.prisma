  loginAttempts             LoginAttempt[]
  cahierJournalHistories    CahierJournalHistory[]
  breaks                    Break[]
  workHours                 WorkHours?
  roomReservations          RoomReservation[]
  scheduleEntries           ScheduleEntry[]
